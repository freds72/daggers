#include ui.lua

local _files={
    'sKULL',
    'rEAPER',
    'bULLET',
}
local _state={
    selected_color=5,
    save=function()
        local dialog_state={
            selected_file=0
        }
        local dialog=_main:dialog(0,8,64,64,15)
        dialog:add(make_static(8),0,8,64,64)
        local list=dialog:add(make_list(63,62,8,bounded_binding(dialog_state,"selected_file",0,#_files-1)),2,10,63,63)
        for i=1,#_files do
            list:add(make_button({text=_files[i],color=2},binding(function(s)
                --
                dialog:close()
            end)))
        end
    end,
    erase_tool=nil
}

function _init()
    -- mouse
    poke(0x5f2d,1)

    _main=main_window()
    local banner=_main:add(make_static(8),0,0,127,7)

    _main:add(make_button(16,binding(_state.save)),0,0)
    _main:add(make_button(17,binding(_state,"erase_tool")),8,0)
end


