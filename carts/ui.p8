#include ui.lua

local _state={
    selected_color=5,
    save=function()
        printh("save!!")
    end,
    erase_tool=nil
}

function _init()
    -- mouse
    poke(0x5f2d,1)

    _main=main_window()
    local banner=_main:add(make_static(8),0,0,127,7)
    local list=banner:add(make_list(64,8,8,bounded_binding(_state,"selected_color",0,15)),64,0,80,7)
    for i=0,15 do
        list:add(make_color_picker(i,binding(_state,"selected_color")))
    end   
    -- +-
    _main:add(make_static(2,binding(_state,"selected_color")),15,0,6,7)
    _main:add(make_button(21,binding(function() 
        _state.selected_color=min(15,_state.selected_color+8)      
    end)),22,0,4,4)
    _main:add(make_button(22,binding(function() 
        _state.selected_color=max(0,_state.selected_color-8)        
    end)),22,4,4,4)


    _main:add(make_button(16,binding(_state.save)),0,0)
    _main:add(make_button(17,binding(_state,"erase_tool")),8,0)
end


