#include ui.lua

local _state={
    selected_color=5,
    save=function()
        printh("save!!")
    end,
    erase_tool=nil
}

function _init()
    -- mouse
    poke(0x5f2d,1)

    _main=main_window()
    local banner=_main:add(make_static(8),0,0,127,6)
    for i=0,15 do
        banner:add(make_color_picker(i,binding(_state,"selected_color")),48+i*4,1,2,2)
    end   
    _main:add(make_button(16,binding(_state.save)),1,1)
    _main:add(make_button(17,binding(_state,"erase_tool")),8,1)
end


